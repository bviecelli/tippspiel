- unless user_signed_in?
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class=>""}) do |f|
    = custom_devise_error_messages!
    .row
      .large-7.columns.right
        = f.text_field :email, placeholder: User.human_attribute_name(:email)
    .row
      .large-7.columns.right
        = f.password_field :password, placeholder: User.human_attribute_name(:password)
    .row
      .large-7.columns.right
        - if devise_mapping.rememberable?
          %label
            = f.check_box :remember_me
            = f.label :remember_me
    .row
      .large-7.columns.right
        = f.submit t("devise.sign_in"), :class => "button"

    = render :partial => "devise/shared/links"