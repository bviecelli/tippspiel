!!! 5

%head
  %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
  %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}
  %meta{:charset => 'utf-8'}
  %title= get_title
  = csrf_meta_tag
  %meta{:name => 'description', :content => "# TODO soeren 08.02.12 description"}
  %meta{:name => 'author', :content => 'Soeren Mothes'}
  %link{:rel => "shortcut icon", :href => "/favicon.ico"}

  -# todo  Facebook metatags opengraph og

  :erb
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  = stylesheet_link_tag "application"

%body
  %noscript
    %p.alert= t(:error_javascript)

  %div.navbar.navbar-fixed-top
    %div.navbar-inner
      %div.container-fluid
        %a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href=> "/"}= get_title
        %div.nav-collapse.collapse
          - write_main_nav
          %p.navbar-text.pull-right
            - write_auth_nav
        :erb
          <!--/.nav-collapse -->

  %div.container-fluid

    %div.row-fluid
      %div.span9
        %div#content-wrap
          %p.error
            - if flash[:error].present?
              %span.flasherror= flash[:error]
          %p.notice
            - if flash[:notice].present?
              %span.flashnotice= flash[:notice]
          - flash.discard

          = yield

      %div.span3
        %div.well.sidebar-nav
          = content_for?(:sidebar) ? yield(:sidebar) : render("shared/sidebar")

    %hr

    %footer
      = "© " + Time.now.strftime("%Y")
      = link_to("Sören Mothes", "http://www.soemo.org/")
      = " |  version #{$TIPPSPIEL_VERSION} - #{$TIPPSPIEL_BUILD_DATE}"

  -# Javascript at the bottom for fast page loading
  = javascript_include_tag 'application'
