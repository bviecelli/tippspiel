!!! 5

%head
  %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
  %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}
  %meta{:charset => 'utf-8'}
  = csrf_meta_tag

  %title= get_title
  %meta{:name => 'author', :content => 'Soeren Mothes'}
  - url = "#{request.protocol}#{request.host_with_port}"
  %meta{:property=>"og:url", :content=>url}
  %meta{:property=>"og:type", :content=>"website"}
  %meta{:property=>"og:site_name", :content=>"#{t('app_name')}"}
  %meta{:name=>"title", :content=>get_title}
  %meta{:property=>"og:title", :content=>get_title}
  - description = 'Fu&#223;ball-Tippspiel auf soemo.org. Dem Sieger winkt ein Wanderpokal verbunden mit unbeschreiblichem Ruhm und uneingeschr&#228;nktem Prahlrecht.'
  %meta{:name => 'description', :content => description}
  %meta{:property=>"og:description", :content=>description}
  %meta{:name => 'keywords', :content => "fussball tippspiel soemo, soeren mothes"}
  - img_url = url + image_path("pokal.jpg")
  %link{:rel=>"image_src", :href=>img_url}
  %meta{:property=>"og:image", :content=>img_url}
  %link{:rel => "shortcut icon", :href => "/favicon.ico"}


  = stylesheet_link_tag "application", :media=>:all
  = javascript_include_tag "vendor/modernizr"
  -# other js is at the bottom of the body tag for fast page loading

%body
  %noscript
    %p.alert= t(:error_javascript)


  %div.row
    %div.large-12.columns
      - write_navbar

  %div.row
    %div.large-12.columns
      = yield(:hero_image)


  %div.row
    %div.large-9.columns{role: "content"}
      - # FIXME soeren 08.04.15 "#{"large-9 columns" role="content"}"92 auslagern in helper methode
      %p.error
        - if flash[:error].present?
          .alert.alert-error
            %a.close{"data-dismiss"=>"alert"}= "×"
            = flash[:error]
      %p.error
        - if flash[:alert].present?
          .alert.alert-error
            %a.close{"data-dismiss"=>"alert"}= "×"
            = flash[:alert]
      %p.notice
        - if flash[:notice].present?
          .alert.alert-success
            %a.close{"data-dismiss"=>"alert"}= "×"
            = flash[:notice]
      - flash.discard
      = yield

    %aside.large-3.columns
      = yield(:sidebar)
      - default_sidebar_content

    %hr

    %footer.row
      %div.large-12.columns
        = "© " + Time.now.strftime("%Y")
        = link_to("Sören Mothes", "http://www.soemo.org/")
        = " | "
        = link_to(t(:imprint), help_path + "#imprint")
        = " |  version #{$TIPPSPIEL_VERSION} - #{$TIPPSPIEL_BUILD_DATE}"

  -# Javascript at the bottom for fast page loading
  = javascript_include_tag 'application'
