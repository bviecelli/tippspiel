%head
  = render partial: 'layouts/header'

%body
  .off-canvas-wrapper
    .off-canvas-wrapper-inner{data: {'off-canvas-wrapper': ''}}
      - write_navbar

      .off-canvas-content.main-content{data: {'off-canvas-content': ''}}
        #hero-div
          = yield(:hero_image)

        - write_flash_messages
        = yield

        .row
          .small-12.columns
            = render_cell(:rss_feed, :show, :item_count => 5)

        .row
          .small-12.columns#bottom-bg-image

        %footer
          .row
            .small-11.small-centered.large-uncentered.columns
              - write_footer_content

      -# Scroll to top
      %a.scroll-to-top{href: '#'}= 'Scroll'
