%h3= t('devise.sign_up')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = custom_devise_error_messages!

  .row
    .small-12.large-7.columns
      .input-group
        .input-group-label
          = icon('envelope-o')
        = f.email_field :email, class: 'input-group-field', placeholder: User.human_attribute_name(:email)

  .row
    .small-12.large-7.columns
      .input-group
        .input-group-label
          = icon('pencil')
        = f.text_field :firstname, class: 'input-group-field', placeholder: User.human_attribute_name(:firstname)

  .row
    .small-12.large-7.columns
      .input-group
        .input-group-label
          = icon('pencil')
        = f.text_field :lastname, class: 'input-group-field', placeholder: User.human_attribute_name(:lastname)

  .row
    .small-12.large-7.columns
      .input-group
        .input-group-label
          = icon('lock')
        = f.password_field :password, class: 'input-group-field', placeholder: User.human_attribute_name(:password)

  .row
    .small-12.large-7.columns
      .input-group
        .input-group-label
          = icon('lock')
        = f.password_field :password_confirmation, class: 'input-group-field', placeholder: User.human_attribute_name(:password_confirmation)

  .row
    .small-12.large-7.columns
      = f.submit t('devise.sign_up'), :class=>'button'

= render :partial => 'devise/shared/links'
