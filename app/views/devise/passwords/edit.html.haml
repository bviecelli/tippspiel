%h3= t("devise.change_password")
%br
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = custom_devise_error_messages!
  = f.hidden_field :reset_password_token

  = f.label :password, User.human_attribute_name('new_password')
  = f.password_field :password

  = f.label :password_confirmation, User.human_attribute_name('password_confirmation')
  = f.password_field :password_confirmation

  %p= f.submit t("devise.change_password"), :class=>"button"

= render :partial => "devise/shared/links"